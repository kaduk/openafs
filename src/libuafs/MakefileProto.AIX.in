srcdir=@srcdir@
include @TOP_OBJDIR@/src/config/Makefile.config
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@



# System specific build commands and flags
DEFINES= -DKERNEL -DUKERNEL
CFLAGS=-I. -I.. -I${TOP_OBJDIR}/src/config ${FSINCLUDES} $(DEFINES) $(KOPTS) ${DBG} $(XCFLAGS)
AR = /usr/bin/ar
ARFLAGS = -r
RANLIB = /bin/ranlib
CC = xlc_r
DEF_LIBPATH=/usr/lib/threads:/usr/lib:/lib

TEST_CFLAGS=-DAFS_PTHREAD_ENV -Daix -DAFS_AIX_ENV $(XCFLAGS)
TEST_LDFLAGS=
TEST_LIBS=-lm -lpthreads

LIBUAFS = libuafs.a
LIBJUAFS = libjuafs.a

AFS_OS_CLEAN = \
	*.exp \
	export.h

# To get __file__ (afs_osi_pag.c) you need to specify language level 
# C99 to xlc_r like this:
OPTF=${OPTMZ} -qlanglvl=stdc99

include Makefile.common

$(LIBUAFS): $(UAFSOBJ)
	-$(RM) -f $(LIBUAFS)
	$(AR) $(ARFLAGS) $(LIBUAFS) $(UAFSOBJ) $(AFS)/afsl.exp
	$(RANLIB) libuafs.a

libuafs_pic.a: $(PICUAFSOBJ)
	-$(RM) -f libuafs_pic.a
	$(AR) $(ARFLAGS) libuafs_pic.a $(PICUAFSOBJ) $(AFS)/afsl.exp
	$(RANLIB) libuafs_pic.a

$(LIBJUAFS): $(JUAFSOBJ)
	-$(RM) -f $(LIBJUAFS)
	$(AR) $(ARFLAGS) $(LIBJUAFS) $(JUAFSOBJ) $(AFS)/afsl.exp
	$(RANLIB) libjuafs.a
